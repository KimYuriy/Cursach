#include <iostream>
#include <Windows.h>


int main()
{
    SetConsoleCP (1251);                  // отвечает за ввод русского текста
    SetConsoleOutputCP (1251);            // отвечает за вывод русского текста
    char arr[500];
    gets_s(arr);                          //ввод строки
    for (int i = 0; i < strlen(arr); i++) // начало цикла посимвольного вывода строки
    {                                     
        Sleep(30);
        std::cout << arr[i];
    }                                     // конец цикла посимвольного вывода строки

}
